{
  "kind": "collectionType",
  "collectionName": "applications",
  "info": {
    "name": "Application"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "applicant": {
      "plugin": "users-permissions",
      "model": "user"
    },
    "message": {
      "type": "richtext"
    },
    "group": {
      "via": "applications",
      "model": "group"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "accepted",
        "rejected",
        "undecided"
      ],
      "default": "undecided"
    }
  }
}
