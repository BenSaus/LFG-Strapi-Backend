{
  "kind": "collectionType",
  "collectionName": "invites",
  "info": {
    "name": "Invite",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "invitee": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "invites"
    },
    "message": {
      "type": "richtext"
    },
    "group": {
      "via": "invites",
      "model": "group"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "accepted",
        "rejected",
        "undecided"
      ],
      "default": "undecided"
    },
    "group_leader_dismissed": {
      "type": "boolean",
      "default": false
    }
  }
}
