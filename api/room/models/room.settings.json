{
  "kind": "collectionType",
  "collectionName": "rooms",
  "info": {
    "name": "Room"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "unique": true,
      "required": true
    },
    "description": {
      "type": "richtext"
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "business": {
      "model": "business",
      "via": "rooms"
    },
    "groups_preferred": {
      "via": "preferred_rooms",
      "collection": "group"
    }
  }
}
